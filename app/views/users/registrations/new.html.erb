<h2 class="text-center">Sign up</h2>
<h4>Please list first/name exactly how they appear on the calendar </h4>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <% if resource.errors[:full_name].any? %>
        <div class="alert alert-danger"><%= resource.errors[:full_name][0] %></div>
    <% end %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :email, required: true, autofocus: true %>
      </div>
      <div class="col-md-6">
        <%= f.input :bar_number, required: true %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
      <%= f.input :first_name, required: true, wrapper_html: { class: 'loading-wrap'} %>
      </div>
      <div class="col-md-6">
      <%= f.input :last_name, required: true %>
      </div>
    </div>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>

    <%= button_tag 'Sign up', type: 'submit', class: 'btn btn-primary block full-width m-b' %>
<% end %>
<%= image_tag 'loading.gif', class: 'loading-gif', style: 'display: none' %>
<p class="text-muted text-center"><small>Already have an account?</small></p>
<%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-default block full-width' %><br />